<div class="container text-center p-4 body justify-content-center">
  <div class="d-flex align-items-center">
    <%= link_to root_path do %>
      <i class="fa-solid fa-left-long fa-2xl" style="color: #000000;"></i> <!-- Icône Bootstrap -->
    <% end %>
  </div>
  <div class="p-4">
    <h1>Mon Profil</h1>
  </div>

    <%= image_tag "default-avatar.jpg", class: "rounded-circle border border-3", width: 150, height: 150, style: "object-fit: cover" %>
  <div class="p-4">
    <h2><%= @user.first_name %> <%= @user.last_name %></h2>
  </div>
  <div>
    <p><strong>Email :</strong> <%= @user.email %></p>
  </div>
  <div class="p-4">
   <% if user_signed_in? %>
      <%= link_to "Déconnexion", destroy_user_session_path, data: { turbo_method: :delete }, class: "red-button text-decoration-none" %>
    <% else %>
      <%= link_to "Log In", new_user_session_path %>
    <% end %>
  </div>
</div>
