<div class="container body">
  <div class="m-4 d-flex justify-content-between">
    <%= link_to root_path do %>
      <i class="fa-solid fa-left-long fa-2xl" style="color: #000000;"></i>
    <% end %>
    <%= link_to edit_bottle_path(@bottle) do %>
      <i class="fa-solid fa-pencil fa-2xl" style="color: #000000;"></i>
      <% end %>
  </div>
    <div class="d-flex flex-column card background-darker">
      <%= cl_image_tag(@bottle.photo.key, class: "p-2",style: "height: 248px; width: 248px; object-fit: cover; border-radius: 20px; margin: auto") if @bottle.photo.attached? %>

      <h4><b><%= @bottle.name %></b></h4>
      <p><%= @bottle.appellation%></p>
      <p><%= @bottle.kind %></p>
      <p><%= @bottle.vintage %></p>
      <p><%= @bottle.area %></p>
      <p><%= @bottle.variety %></p>
      <p><%= @bottle.notes %></p>
    </div>
    <div class= "m-4">
      <%= link_to bottle_path(@bottle), data: { turbo_method: :delete, turbo_confirm: "Etes-vous sÃ»r?" } do %>
        <i class="fa-solid fa-trash-can fa-2xl" style="color: #000000;"></i>
      <% end %>
    </div>
</div>
